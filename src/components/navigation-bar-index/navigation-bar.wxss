@import "../../iconfont.wxss";

.navigation-bar{
	position: fixed;
	width: 100%;
	top:0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 1000;
	box-sizing: border-box;
}
.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.bg image {
  width: 100%;
  height: 100%;
}

.border-bottom {
  border-bottom: 1rpx solid #eee;  
}

.box{
	position: relative;
	width: 100%;
	box-sizing: border-box;
  z-index: 10;
}
.navigation-title{
	position: absolute;
	left: 0;
	bottom: 10px;
	width: 100%;
	height: 24px;
	text-align: center;
	z-index: 10;
  
}
.navigation-title cover-view {
	display: inline-block;
	font-size: 18px;
	font-weight: 600; 
	width: 380rpx;
	height: 24px;
	line-height: 24px;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	text-align: center;
}
.index{
	position: absolute;
	display: flex;
	justify-content: center;
	align-items: center;
	/* width: 90rpx; */
	/* height: 80rpx; */
	left: 50rpx;
	bottom: 20rpx;
	z-index: 11;
}
.index image{
	width: 42rpx;
	height: 42rpx;
}
.back{
	position: absolute;
	display: flex;
	justify-content: center;
	align-items: center;
	width: 90rpx;
	height: 90rpx;
	left: 0;
	bottom:0;
	z-index: 10000;
}
.back cover-image{
	width: 40rpx;
	height: 40rpx;
}

