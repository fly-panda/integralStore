/* pages/confirmation-oder/confirmation-oder.wxss */
page {
  background: #f6f6f6;
}

.address-box {
  background-color: #fff;
  margin: 30rpx;
  padding: 60rpx 60rpx 40rpx 60rpx;
  box-shadow: 0 2px 7px 0 rgba(122,118,118,0.09);
}

.address-box .top {
  margin-bottom: 4rpx;
  font-size: 12px;
  color: #333;
}

.tag {
  width: 72rpx;
  height: 32rpx;
  background: #333;
  font-size: 22rpx;
  color: #fff;
  text-align: center;
  line-height: 32rpx;
}

.phone {
  margin: 0 40rpx;
}

.address-info {
  color: #9C9C9C;
  font-size: 12px;
  width: 460rpx;
}

.icon-jiantou-copy-copy1 {
  font-size: 12px;
  color: #9C9C9C;  
}

.shop {
  background: #fff;
  margin: 0 30rpx;
  box-shadow: 0 2px 7px 0 rgba(122,118,118,0.09);  
  padding: 0 40rpx;
}

/* .shop image {
  width: 68rpx;
  height: 54rpx;
} */
.shop .info {
  padding: 24rpx 0;
  padding-left: 24rpx;
}

.shop .jf {
  border-top: 1rpx solid #f1f1f1;
  color: #333;
  padding: 24rpx 0;
}

.shop .info .mid {
  flex: 1;
  margin-left: 60rpx;
}

.shop .info .mid .txt {
  margin-bottom: 30rpx;
  display: block;
}

.shop .info .num {
  height: 154rpx;
  color: #9C9C9C;
}

.prize {
  font-size: 18px;
  color: #E4141D;
}
.prize text:first-child {
  font-size: 20rpx;
}

.jf-pay {
  width: 84rpx;
  height: 42rpx;
}

.pay-box {
  margin: 0 30rpx;
  background: #fff;
  padding: 0 30rpx;
  margin-top: 24rpx;
  padding-bottom: 40rpx;
}

.pay-box .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f1f1f1;
  padding: 24rpx 0;
}

.pay-box .jifen {
  color: #E4141D;
  font-size: 20rpx;
  margin-right: 14rpx;
}

.wx-pay {
  width: 30rpx;
  height: 26rpx;
  margin-right: 26rpx;
}

.xj-pay {
  width: 26rpx;
  height: 30rpx;
  margin-right: 26rpx;
}

.pay-type {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f1f1f1;  
}
.pay-type text {
  flex: 1;
}

.radio {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}

.yue {
  color: #A1A1A1;
  font-size: 20rpx;
  margin-right: 20rpx;
}

.bottom-nav {
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  height: 100rpx;
  display: flex;
  background: #fff;
}

.bottom-nav .prize {
  width: 428rpx;
  display: flex;
  align-items: center;
  padding-left: 68rpx;
  box-sizing: border-box;
}

.bottom-nav .pay-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  background: #E1C179;
  color: #fff;
  text-align: center;
}

.radio-disable {
    width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 1rpx solid #e9e9e9;
}
.icon-1004 {
  width: 68rpx;
  height: 54rpx;
}
.icon-1003 {
  width: 60rpx;
  height: 62rpx;
}

.icon-1002 {
  width: 64rpx;
  height: 64rpx;
}

