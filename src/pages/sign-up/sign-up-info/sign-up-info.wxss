/* pages/user/user-set/change-address/change-address.wxss */

.cell {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f1f1f1;
}

.cell {
  margin: 0 30rpx;
  padding: 40rpx 0 20rpx 0;
}

input {
  flex: 1;
}

picker {
  flex: 1;
}

.right {
  color: #363636;
  width: 70px;
}

button {
  margin-top: 600rpx;
  width: 606rpx;
  border-radius: 12rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: #e1c179;
  color: #fff;
  font-size: 14px;
}

.button-hover {
  background: #e1c179;
  color: #fff;
  opacity: 0.8;
}

button[disabled]:not([type]) {
  background: #cacace;
  color: #fff;
}

/* 自定义单选按钮样式 */

/* 自定义 radio 样式 */

radio {
  width: 38rpx;
}

radio .wx-radio-input {
  border-radius: 50%;
  width: 28rpx;
  height: 28rpx;
}

/* 选中后的样式 （可根据设计稿需求自己修改） */

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 26rpx; /* 对勾大小 26rpx */
  color: #fff; /* 对勾颜色 */
  background: #e1c179;
  border-color: #e1c179;
}

.radio-group {
  flex: 1;
  display: flex;
}

label {
  margin-right: 40rpx;
  display: flex;
  align-items: center;
}

label view {
  margin-right: 20rpx;
}