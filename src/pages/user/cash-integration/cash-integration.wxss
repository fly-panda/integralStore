.headbg{
  height:153pt;
  background-image: linear-gradient(-10deg, #2E2E2E 0%, #020100 100%);
  background-repeat: no-repeat;
  background-size: 100%;
  text-align: center;
}
page{
  background:#F6F6F6;

}
.headbg text{
  opacity: 0.66;
  font-size: 9px;
  color: #D5C394;
  letter-spacing: -0.04px;
  margin-top:10pt;

}
.headbg view{
  font-family: DINAlternate-Bold;
  font-size: 64px;
  color: #FBE0AA;
  letter-spacing: -0.28px;
  margin-top:13pt;
}
.list-view{
  padding: 2pt 16pt 51pt 16pt;
  background: #F6F6F6;
  border-radius: 2px;
}
.views-cont{
  display: flex;
  background: #FFFFFF;
  padding: 0 29pt 0 31pt;
  margin-top:12px;
  height:80pt;

}
.views-cont .left{
  flex: 1;
}
.left .titleCls{
  font-size: 12px;
  color: #000000;
  letter-spacing: -0.05px;
  margin-top:17pt;
}
.left .priceCls{
  font-size: 14px;
  color: #EA3525;
  letter-spacing: -0.06px;
  margin-top:2pt;
}
.left .dateCls{
  font-size: 9px;
  color: #A1A1A1;
  letter-spacing: -0.04px;
  margin-top:7pt;
}
.views-cont .right image{
  width:90pt;
  height:80pt;
}
.list-btn{
  width:100%;
  position: fixed;
  bottom:0;
  left:0;
  display: flex;
}
.list-btn>view{
  width:50%;
  height: 49px;
  font-size: 14px;
  letter-spacing: -0.06px;
  text-align: center;
  line-height: 49px;
}
.list-btn>view:first-child{
  background: #FFFFFF;
  color: #E1C179;
}
.list-btn>view:last-child{
  background: #E1C179;
  color: #FFFFFF;
}