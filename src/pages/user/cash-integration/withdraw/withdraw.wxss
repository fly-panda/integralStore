page{
  background: #F6F6F6;
  border-radius: 2px;
 
}
.cont-view{
  padding: 34rpx 32rpx;
}
.cont-view>view{
  background: #FFFFFF;
  width:100%;
  height: 670rpx;
  font-size: 14px;
  color: #070707;
  letter-spacing: -0.06px;
}
.card-num{
  border-radius: 2px;
  display: flex;
  padding: 42rpx 20rpx 0 60rpx;
}
.num-view{
  flex:1;
  margin-left: 5.3%;
  font-size: 14px;
  color: #070707;
  letter-spacing: -0.06px;
  margin-top: 2rpx;
}
.icoCls{
  transform:rotate(-180deg);
  float:right;

}
.name-cls{
  margin-top: 18rpx;
  color: #9B9B9B;
}
.price-cls{
  margin-top: 74rpx;
  padding: 0 60rpx;
}
.inp-cls{
  height:154rpx;
  display: flex;
  align-items:center;
  border-bottom: 1px solid #F1F1F1;
}
.inp-cls>text{
  font-size: 36px;
  color: #070707;
  letter-spacing: -0.16px;
  line-height: 36px;
}
.inp-cls>input{
  flex:1;
  height: 154rpx;
  font-size: 50px;
  color: #030303;
  letter-spacing: -3.88px;
}
.balance-cls{
  font-size: 13px;
  color: #9B9B9B;
  letter-spacing: -0.06px;
  margin-top: 36rpx;
}
.btn-view{
  margin-top: 76rpx;
  padding: 0 40rpx;
}
.btn-view button{
  width: 100%;
  height:72rpx;
  background: #E1C179;
  border-radius: 6px;
  font-size: 14px;
color: #FFFFFF;
letter-spacing: -0.08px;
}