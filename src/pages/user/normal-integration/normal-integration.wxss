.headbg{
  height:153pt;
  background-image: linear-gradient(-10deg, #2E2E2E 0%, #020100 100%);
  background-repeat: no-repeat;
  background-size: 100%;
  text-align: center;
}
page{
  background:#F6F6F6;

}
.headbg text{
  opacity: 0.66;
  font-size: 9px;
  color: #D5C394;
  letter-spacing: -0.04px;
  margin-top:10pt;

}
.headbg view{
  font-family: DINAlternate-Bold;
  font-size: 64px;
  color: #FBE0AA;
  letter-spacing: -0.28px;
  margin-top:13pt;
}

.list-btn{
  width:100%;
  position: fixed;
  bottom:0;
  left:0;
  display: flex;
  padding: 17pt 0;
}
.list-btn>view{
  margin: 0 auto;
  width:80%;
  font-size: 14px;
  color: #FFFFFF;
  letter-spacing: -0.08px;
  background: #E1C179;
  border-radius: 6px;
  line-height: 36pt;
  text-align: center;
}
.inp-list{
  padding: 2pt 16pt;
}
.inp-list>view{
  height: 48pt;
  display: flex;
  align-items: center;
  background: #FFFFFF;
  margin-top:14pt;
  padding: 0 14pt;
}
.inp-list>view text{
  font-size: 14px;
  color: #4A4A4A;
  letter-spacing: -0.06px;
}
.inp-list>view input{
  flex:1;
  height: 48pt;
  margin-left:2pt;
}

