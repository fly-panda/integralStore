/* pages/index/vip/vip.wxss */

page {
  background: #eee;
}

.banner {
  position: relative;
  width: 100%;
  height: 428rpx;
}

swiper {
  width: 100%;
  height: 428rpx;
}

.banner .back {
  position: absolute;
  left: 32rpx;
  top: 68rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

swiper image {
  width: 100%;
  height: 428rpx;
}

.info {
  background: #fff;
  padding: 20rpx 32rpx 32rpx 32rpx;
  margin-bottom: 24rpx;
}

.info .name {
  margin-bottom: 20rpx;
  font-size: 18px;
}

.info .jf {
  font-size: 20rpx;
  color: #a1a1a1;
}

.info .prize {
  font-size: 18px;
  color: #e4141d;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
}

.info .icon {
  font-size: 12px;
}

.info .tip {
  font-size: 14px;
}

.content {
  background: #fff;
  padding: 0 32rpx;
  padding-bottom: 22rpx;
}

.content .title-content {
  font-size: 12px;
  color: #363636;
  padding: 20rpx 0;
  font-weight: 600;
}

.content .txt {
  margin-bottom: 22rpx;
  color: #363636;
}

.btn {
  background: #e1c179;
  border-radius: 12rpx;
  width: 308rpx;
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  font-size: 14px;
  color: #fff;
  margin: 0 auto;
}
